{
  "scanner": {
    "io_thread_count": 12,
    "cpu_thread_count": 2,
    "thread_count": 8,
    "batch_size": 100,
    "dns_timeout_ms": 1000,
    "probe_timeout_ms": 500,
    "retry_count": 1
  },
  "protocols": {
    "SMTP": {
      "enabled": true,
      "ports": [25, 465, 587, 2525],
      "timeout_ms": 3000
    },
    "POP3": {
      "enabled": true,
      "ports": [110, 995],
      "timeout_ms": 3000
    },
    "IMAP": {
      "enabled": true,
      "ports": [143, 993],
      "timeout_ms": 3000
    },
    "HTTP": {
      "enabled": false,
      "ports": [80, 443, 8080],
      "timeout_ms": 3000
    }
  },
  "dns": {
    "resolver_type": "cares",
    "max_mx_records": 16,
    "timeout_ms": 5000
  },
  "output": {
    "format": ["text", "csv"],
    "directory": "./result",
    "enable_json": true,
    "enable_csv": true,
    "enable_report": true
  },
  "logging": {
    "level": "INFO",
    "console_enabled": true,
    "file_enabled": false,
    "file_path": "./scanner.log"
  },
  "vendor": {
    "enabled": false,
    "pattern_file": "./config/vendors.json",
    "similarity_threshold": 0.7
  }
}
